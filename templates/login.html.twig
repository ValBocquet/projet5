{% extends 'base.html.twig' %}
{% block title %}
    Se connecter
{% endblock %}

{% block body %}
    <div class="page-header jumbotron text-center" id="banner" >
        <h1>Se connecter sur le site</h1>

        {% if error.messageKey is defined %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messagedata, 'security') }}
            </div>
        {% endif %}

        {% if (message is defined) and (state is defined) %}
            <div class="alert {{ state }}">
                {{ message }}
            </div>
        {% endif %}


        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Adresse email" required name="_username" value="{% if last_username is defined %}{{ last_username }}{% endif %}">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>
        </form>
        <a href="#">Mot de passe oubli√©</a>
    </div>
{% endblock %}

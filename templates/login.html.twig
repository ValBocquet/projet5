{% extends 'base.html.twig' %}
{% block title %}
    Se connecter
{% endblock %}

{% block body %}
    <div class="page-header jumbotron text-center" id="banner" >
        <h1>Se connecter sur le site</h1>

        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Adresse email" required name="_username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}

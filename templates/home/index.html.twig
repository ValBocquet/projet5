{% extends 'base.html.twig' %}
{% block title %}
    Site de partage et d'upload
{% endblock %}

{% block body %}
    <div class="page-header" id="banner">
        <div class="row">
            <div class="col-lg-8 col-md-7 col-sm-6">
                <h1>Bienvenue sur le site</h1>
            </div>
        </div>

    </div>

    <div class="bs-docs-section clearfix">
            <div class="page-header">
                <div class="row">
                    <div class="col-lg-12">
                        {% if app.user %}
                            <h1 id="navbars">{{ app.user.username }}</h1>
                        {% else %}
                            <h1 id="navbars">Hello</h1>
                        {% endif %}
                    </div>
                </div>
            </div>
        <br><br><br>
        <div class="row">
            <div class="col-lg-7">
                <p>Uploadons</p>
                <div class="dragDrop">
                    <!-- formulaire -->
                    {% extends 'base.html.twig' %}

                    {% block body %}

                        {{ form_start(UploadType) }}

                        {{ form_row(UploadType.file) }}
                        {{ form_end(UploadType) }}

                    {% endblock %}
                </div>
            </div>
            <div class="col-lg-5">
                <p>Mes derniers uploads</p>
            </div>
        </div>

    </div>
{% endblock %}

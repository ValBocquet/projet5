<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/styles.css">
        <script src="https://kit.fontawesome.com/2310afbeda.js"></script>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container">
            <a href="{{ path('home') }}" class="navbar-brand">Accueil</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="#">Help</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Blog</a>
                    </li>

                </ul>
                {% if not app.user %}
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">S'inscrire</a>
                        <a class="nav-link" href="{{ path('login') }}">Se connecter</a>
                    </li>
                </ul>
                {% else %}
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="{{ path('user') }}" class="nav-link">
                            {% if app.user.avatar is not null %}
                                <img src="upload/{{ app.user.avatar }}" alt="avatar de {{ app.user.username }}" class="arrondir">
                            {% else %}
                                {{ app.user.username }}
                            {% endif %}
                        </a>
                        <a href="{{ path('logout') }}" class="nav-link">DÃ©connexion</a>
                    </li>
                </ul>

                {% endif %}

            </div>
        </div>
    </div>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
